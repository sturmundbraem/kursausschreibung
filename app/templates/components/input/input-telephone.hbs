<script>
    function formatPhoneNumber(event) {
        const input = event.target;
        let phoneNumber = input.value.replace(/\D/g, ''); // Remove all non-digit characters
        if (phoneNumber.length >= 9) phoneNumber = phoneNumber.substring(0, 10); // Limit to 9 digits

        // Apply the desired format
        let formatted = phoneNumber;
        if (phoneNumber.length >= 4) {
            formatted = phoneNumber.substring(0, 3) + ' ' + phoneNumber.substring(3, 6);
        }
        if (phoneNumber.length >= 7) {
            formatted = formatted.substring(0, 7) + ' ' + phoneNumber.substring(6, 8);
        }
        if (phoneNumber.length >= 9) {
            formatted = formatted.substring(0, 10) + ' ' + phoneNumber.substring(8, 10);
        }

        input.value = formatted;
    }
</script>
<input class="uk-input" placeholder="031 345 67 89" type="tel" oninput="formatPhoneNumber(event)" name={{this.field.id}} required={{this.field.options.required}}
  autocomplete={{this.field.options.autocomplete}} disabled={{this.field.options.disabled}}>
